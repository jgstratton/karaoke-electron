{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "CommonJS",
		"target": "ES2020",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"outDir": "./dist-electron",
		"rootDir": "./",
		"esModuleInterop": true,
		"types": [
			"node"
		]
	},
	"include": [
		"vite.config.mjs",
		"electron/**/*"
	],
	"exclude": [
		"electron/**/*.js"
	]
}
