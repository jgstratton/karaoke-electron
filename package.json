{
    "name": "karaoke-electron",
    "version": "0.1.0",
    "description": "Electron + React + PouchDB starter",
    "main": "electron/main.js",
    "author": "",
    "license": "MIT",
    "scripts": {
        "dev": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
        "build": "vite build",
        "start": "electron .",
        "package": "npm run build && electron-builder"
    },
    "dependencies": {
        "pouchdb-browser": "^8.0.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^4.3.0",
        "concurrently": "^9.0.0",
        "cross-env": "^7.0.3",
        "electron": "^30.0.0",
        "electron-builder": "^24.13.3",
        "vite": "^5.4.0",
        "wait-on": "^7.0.1"
    },
    "build": {
        "appId": "com.example.karaoke",
        "productName": "Karaoke Electron",
        "files": [
            "electron/**/*",
            "dist/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "build",
            "output": "release"
        },
        "asar": true,
        "win": {
            "target": [
                "nsis"
            ]
        }
    }
}