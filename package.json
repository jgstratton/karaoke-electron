{
	"name": "karaoke-electron",
	"version": "0.1.0",
	"description": "Electron + React + PouchDB starter",
	"main": "dist-electron/electron/main.js",
	"author": "",
	"license": "MIT",
	"scripts": {
		"dev": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 concurrently -k \"vite\" \"npm run build:electron && wait-on http://localhost:5173 && electron --inspect .\"",
		"dev:debug": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 concurrently -k \"vite\" \"npm run build:electron && wait-on http://localhost:5173 && electron --inspect .\"",
		"build": "vite build",
		"build:electron": "tsc -p tsconfig.node.json",
		"build:electron:watch": "tsc -p tsconfig.node.json --watch",
		"start": "npm run build:electron && electron .",
		"package": "npm run build && npm run build:electron && electron-builder",
		"format": "prettier --write .",
		"format:check": "prettier --check ."
	},
	"dependencies": {
		"@fortawesome/fontawesome-free": "^7.0.0",
		"@reduxjs/toolkit": "^2.8.2",
		"events": "^3.3.0",
		"pouchdb-browser": "^8.0.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-redux": "^9.2.0",
		"reselect": "^5.1.1"
	},
	"devDependencies": {
		"@types/node": "^24.2.1",
		"@types/pouchdb-browser": "^6.1.5",
		"@types/react": "^19.1.9",
		"@types/react-dom": "^19.1.7",
		"@vitejs/plugin-react": "^4.3.0",
		"@vitejs/plugin-react-swc": "^4.0.0",
		"concurrently": "^9.0.0",
		"cross-env": "^7.0.3",
		"electron": "^30.0.0",
		"electron-builder": "^24.13.3",
		"prettier": "^3.3.3",
		"typescript": "^5.9.2",
		"vite": "^5.4.0",
		"wait-on": "^7.0.1"
	},
	"build": {
		"appId": "com.example.karaoke",
		"productName": "Karaoke Electron",
		"files": [
			"dist-electron/**/*",
			"dist/**/*",
			"node_modules/**/*",
			"package.json"
		],
		"directories": {
			"buildResources": "build",
			"output": "release"
		},
		"asar": true,
		"win": {
			"target": [
				"nsis"
			]
		}
	}
}
