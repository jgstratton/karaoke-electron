{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Attach to Electron Main",
			"type": "node",
			"request": "attach",
			"port": 9229,
			"restart": true
		},
		{
			"name": "Launch Electron with Debug",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/electron",
			"args": [
				"--inspect-brk=9229",
				"."
			],
			"cwd": "${workspaceFolder}",
			"env": {
				"VITE_DEV_SERVER_URL": "http://localhost:5173"
			},
			"console": "integratedTerminal",
			"restart": true
		}
	]
}
